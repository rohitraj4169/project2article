<div class="container">
	<div class="row justify-content-center">
		<div class="col-10">
			<%= render 'shared/errors', obj:@user %>
			<%= form_with(model:@user, class:"shadow p-3 mb-3 bg-info rounded", local: true )do |f| %>
				<div class="form-group row">
					<%= f.label :username ,class:" required col-2 col-form-label"%>
					<div class="col-10">
						<%= f.text_field :username,class:"form-control shadow rounded",placeholder:"Enter user name", required:true %>
					</div>
				</div>
                <div class="form-group row">
					<%= f.label :email,class:" required col-2 col-form-label" %>
					<div class="col-10">
						<%= f.email_field :email,class:"form-control shadow rounded",placeholder:"Enter Your Email", required:true %>
					</div>
				</div>
				<div class="form-group row">
					<%= f.label :password,class:" required col-2 col-form-label" %>
					<div class="col-10">
						<%= f.password_field :password,class:"form-control shadow rounded",placeholder:"Enter Password", required:true %>
					</div>
				</div>
				<div class="row">
					<div class="form-group offset-md-4 col-md-2 text-center">
						<%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class:"btn btn-success btn-lg") %>
					</div>
					<div class="form-group  col-md-3  text-center">
						<%= link_to 'Cancel', @user.new_record? ? root_path : :back,class:"btn btn-danger btn-lg" %>
					</div>
				</div>
			<% end %>
		</div>
		
	</div>
</div>